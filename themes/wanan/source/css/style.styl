    //     background-size:cover;
    //     background-position:center;
    //     position:relative;
    //     z-index:-1;
    // }

    .nav-right{
        height: 100%;
        width: 250px;
        float: left ;
        position:relative;
    }

    .nav-right .tag {
        width: 100%;
        position:absolute;
    }

    .nav-right .tag input{
        margin-top:10px;
        width: 100%;
        border: none;
        padding: 0;
        height : 40px;
        outline:none;
        font-size :18px;
        background-color:rgba(255,255,255,0);
        text-indent:15px;
        border-bottom: 2px solid #e3e4e5;
        color:#666;
    }

    .nav-right .tag ul {
        margin-top :10px;
    }    

    .nav-right .tag ul li {
        margin-left :15px;
        margin-top :5px;
    }    

    .nav-right .tag ul li a {
        text-decoration:none;
        color:#666;
    }    

    .post{
        overflow: hidden;
        position: relative;
        padding: 30px;
        border-left: 1px solid #ccc;
    }
    .post .title{

    }

    .post h2,.post h3,.post p,.post img,.post code{
        margin-top: 10px;
    }
