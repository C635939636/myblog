* {
    margin: 0;
    padding: 0;
    list-style: none;
}

html,body {
    height: 100%;
}

code{
    overflow-x: auto;
    overflow-y: auto;
    white-space: pre-line;
    word-wrap:break-word;
    word-break:break-all;
    font-size : 15px;
    font-weight: 500;
}

@media screen and (min-width:1024px) {
    body {
      display:flex;
    }

    nav {
        height: 100%;
        display: inline-block;
        display:flex;
    }

    .nav-left {
        height: 100%;
        width: 100px;
        background-color: rgb(46, 43, 42);
        float: left;
        text-align center;
        font-size : 14px;
    }

    .nav-left .avatar {
        margin-top:20px;  
        width 80px;
        height 80px;
        border-radius: 50%;
    }

    .nav-left .author {
        margin-top:10px;  
        color #fff;
    }

    .nav-left .category {
        margin-top:30px;
        border-top: 1px solid #fff;  
    }

    .nav-left .category li{
        color: rgba(255,255,255,0.7);
        line-height: 40px;
        border-bottom: 1px solid #fff;
        font-size : 16px;  
    }

    .nav-left .category li.active,.nav-left .category li.active:hover{
        color: #020202;
        box-shadow: inset 100px 0 0 #fff;
        transition: box-shadow 0.2s ease-out;
    }

    .nav-left .category li:hover{
        color: #f7f7f7;
        box-shadow: inset 6px 0 0 #fff;
        transition: box-shadow 0.2s ease-out;
    }

    // .nav-right::before{
    //     height: 100%;
